<!doctype html>
<html>
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
    <meta name="author" content="">

    <title>Resend Email - AT for City Planning</title>
    <link rel="icon" type="image/png" href="images/planning.png" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
	<script src="/js/jquery.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
    	<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-login">
					<div class="panel-heading">						
						<div class="row">
                            <div class="col-xs-12">
								<a href="#" id="resend-form-link">Resend Verification Email</a>
							</div>							
						</div>
						<hr>
					</div>					
					<% if (resendMsg !== null) { %>
						<div class="alert alert-info alert-dismissable fw-alert">
							<a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
							<%= resendMsg %>
						</div>
					<% } %>
                    <div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                                <form id="resend-verif-email-form" action="/resend" method="post" role="form">
									<div class="form-group">
                                        <p style="text-align:justify;font-size:14px;">Please check your email and verify your address or resend the verification email below.</p>
										<input type="text" name="resend_email" id="resend_email" tabindex="1" class="form-control" placeholder="Email Address" required="true" style="margin-top:6px;">
									</div>								
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="resend-submit" id="resend-submit" tabindex="4" class="form-control btn btn-login" value="Resend Email">
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
													<a href="/login">Back to login</a>
												</div>
											</div>
										</div>
									</div>
								</form>
                            </div>
						</div>
                    </div>                    
				</div>
			</div>
    	</div>
    </div>
</body>
<script src="/js/register.js"></script>
</html>