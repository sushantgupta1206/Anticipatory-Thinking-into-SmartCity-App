<!doctype html>
<html>
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
    <meta name="author" content="">

    <title>AT for City Planning</title>
    <link rel="icon" type="image/png" href="images/planning.png" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
	<script src="/js/jquery.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
    	<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-1"></div>
							<div class="col-xs-2 center-block">
								<img class="logo" src="images/fw_planning.png" />
							</div>
							<div class="col-xs-8 branding">
								<p>Anticipatory Thinking Tool for Smart City Planning</p>
							</div>
							<div class="col-xs-1"></div>
						</div>
						<div class="row">
                            <div class="col-lg-12">
								<a href="#" id="login-form-link">Register</a>
							</div>							
						</div>
						<hr>
					</div>
					<% if (message.length > 0) { %>
						<div class="alert alert-danger alert-dismissable fw-alert">
							<a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
							<%= message %>
						</div>
					<% } %>
					<div class="auth-error-message"></div>
                    <div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                                <form id="register-form" action="/register" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" title="Should contain only numbers and letters of length 8-20 characters">
									</div>
									<div class="form-group">
										<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" >
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password" minlength="8" maxlength="20" title="Should contain atleast 1 number, 1 upper case letter, 1 lower case letter and 1 special character (!@#$%^&*). Maximum allowed length is 8-20 characters">
									</div>
									<div class="form-group">
										<input type="password" name="confirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password" minlength="8" maxlength="20" title="Should contain atleast 1 number, 1 upper case letter, 1 lower case letter and 1 special character (!@#$%^&*). Maximum allowed length is 8-20 characters">
									</div>
                                    <div class="form-group">
										<input type="text" name="fullname" id="fullname" tabindex="1" class="form-control" placeholder="Full Name" minlength="4" maxlength="30" title="Only alphabets allowed along with space">
									</div>
                                    <div class="form-group">
                                        <select class="form-control" name="question" id="security-question">
                                            <option selected>What is the name of your first pet?</option>
                                            <option>What is your mother's maiden name?</option>
                                            <option>What is your nickname?</option>
                                            <option>In which year were you born?</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
										<input type="text" name="answer" id="sec-answer" tabindex="1" class="form-control" placeholder="Security Answer" title="Please enter alphanumeric characters only. Max length is 16 characters">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">                                                
											</div>
										</div>
									</div>
                                    <div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
													<p class=''>Already have an account, <a href="/login">Login here</a></p>
												</div>
											</div>
										</div>
									</div>                                    
								</form>															
							</div>
						</div>
					</div>
				</div>
			</div>
    	</div>
    </div>
</body>
<script src="/js/register.js"></script>
</html>