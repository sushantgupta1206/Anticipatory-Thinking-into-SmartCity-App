<!doctype html>
<html>
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
    <meta name="author" content="">

    <title>Reset Password - AT for City Planning</title>
    <link rel="icon" type="image/png" href="images/planning.png" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
	<script src="/js/jquery.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
    	<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-login">
					<div class="panel-heading">						
						<div class="row">
                            <div class="col-xs-12">
								<a href="#" id="login-form-link">Forgot your Password?</a>
							</div>							
						</div>
						<hr>
					</div>					
					<div class="auth-error-message"></div>
                    <div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                                <form id="reset-pwd-form" action="/reset" method="post" role="form">
									
									<div class="form-group">
                                        <p style="text-align:justify;font-size:14px;">Enter your new account password below. Once confirmed your new password will be active.</p>
										<% if (reset_msg!== null) { %>
										<div class="form-group">
                                        
										<input type="text" name="email" id="email" tabindex="1" class="form-control" value=<%=reset_msg.email%> required="false" style="margin-top:6px;" readonly>
									</div>
									<div class="form-group">
                                        <input type="text" name="token" id="token" tabindex="1" class="form-control" value=<%=reset_msg.token%> required="false" style="margin-top:6px;" readonly>
									</div>							
									<% } %>
									<input type="password" name="reset_pwd" id="reset_pwd" tabindex="1" class="form-control" placeholder="Password" required="true" style="margin-top:6px;" minlength="8" maxlength="20" title="Should contain atleast 1 number, 1 upper case letter, 1 lower case letter and 1 special character (!@#$%^&*). Maximum allowed length is 8-20 characters">
									</div>
                                    <div class="form-group">                                        
										<input type="password" name="reset_pwd_cnf" id="reset_pwd_cnf" tabindex="1" class="form-control" placeholder="Confirm Password" required="true" minlength="8" maxlength="20" title="Should contain atleast 1 number, 1 upper case letter, 1 lower case letter and 1 special character (!@#$%^&*). Maximum allowed length is 8-20 characters">
									</div>								
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="reset-pwd-submit" id="reset-pwd-submit" tabindex="4" class="form-control btn btn-login" value="Reset">
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
													<a href="/login">Back to login</a>
												</div>
											</div>
										</div>
									</div>
								</form>
                            </div>
						</div>
                    </div>                    
				</div>
			</div>
    	</div>
    </div>
</body>
<script src="/js/register.js"></script>
</html>
